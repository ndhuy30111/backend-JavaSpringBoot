package com.springboot.apiwebsite.repository;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.stereotype.Repository;

import com.springboot.apiwebsite.entity.SizeEntity;

@Repository
public interface SizeReponsitory extends JpaRepository<SizeEntity, Long>{
	@Query(name=" Select s from Size s where s.productUrl = productUrl and s.colorName =colorName and s.sizeName = sizeName ",nativeQuery = true)

		SizeEntity findsize(String productUrl, String colorName, String sizeName);
}
